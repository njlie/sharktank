{{extend 'layout.html'}}
<div id="myCarousel" class="carousel slide" data-ride="carousel">
         <div class="item">
            <div style="text-align: center;"><img src="../static/images/shark_bg.jpg" height = "200" width = "800"/></div>
         </div>
      </div>
      <div class="container text-center">
         <br>
         <h3>Welcome, {{=db.auth_user[auth.user_id].first_name}}!</h3>
      </div>
      <div class="container text-center">
         <button type="button">About</button>
         <button type="button">Social</button>
         <button type="button">Edit Profile</button>
      </div>
      <div class="container text-center">
         <div class="row">
            <div class="col-sm-4">
